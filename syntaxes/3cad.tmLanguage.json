{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "3cad",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#language"
		},
		{
			"include": "#variable-assignment"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#conditional"
		}
	],
	"repository": {
		"comment": {
			"patterns": [
				{
					"name": "comment.line.3cad",
					"match": "'.*[^\n\r]"
				}
			]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.3cad",
				"match": "\\#b(?i:IF|ELSEIF|ELSE|ENDIF|FOR|ENDFOR|LET|LETS|MSG|SELECT|CASE|CASES|ENDSELECT|DEFAULT)\\b"
			}]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.language.3cad",
					"match": "\\$\\([a-zA-Z0-9_]*\\)"
				}
			]
		},
		"variable-assignment": {	
			"begin": "(#let)\\s+",
			"beginCaptures": {
			  "1": {
				"name": "keyword.control.let.3cad"
			  }
			},
			"end": "(?=:|$)",
			"patterns": [
				{
					"match": "([a-zA-Z0-9_]*)",
					"name": "variable.other.3cad"
				},
				{
					"match": "(=)",
					"name": "keyword.operator.assignment.3cad"
				},
				{
					"match": "(\"[^\"]*\"|[0-9]+|true|false|null)", 
					"name": "constant.value.3cad"
				}
			]		  	
		},
		"conditional": {
			"patterns": [
				{
					"name": "keyword.control.conditional.3cad",
					"match": "#if"
				},
				{
					"name": "keyword.control.conditional.end.3cad",
					"match": "#endif"
				}
			],
			"foldingStartMarker": "^\\s*#\\s*if\\b",
			"foldingStopMarker": "^\\s*#\\s*endif\\b"
		},
		"language": {
			"patterns": 
			[
				{
					"name": "variable.language.vector.3cad",
					"match": "\\$\\([a-zA-Z0-9_]*:\\d+\\)"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.3cad",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.3cad",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.3cad"
}